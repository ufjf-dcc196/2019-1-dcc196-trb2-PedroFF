<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.Edicao">

    <Spinner
            android:id="@+id/estadoTarefa"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:layout_width="214dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="@string/estado_da_tarefa"
            android:inputType="none"
            android:spinnerMode="dialog"
            android:theme="@style/MatchSpinnerTheme"
            android:layout_marginStart="8dp" 
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            />
    <Spinner
            android:id="@+id/grauTarefa"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:layout_width="214dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="@string/grau_da_tarefa"
            android:inputType="none"
            android:spinnerMode="dialog"
            android:theme="@style/MatchSpinnerTheme"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" 
            android:layout_marginRight="8dp"
            android:layout_marginTop="28dp"
            />

    <EditText
            android:id="@+id/tituloTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            tools:targetApi="o" android:hint="@string/t_tulo_da_tarefa"/>

    <EditText
            android:id="@+id/descricaoTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:hint="@string/descri_o"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            tools:targetApi="o"/>

    <EditText
            android:id="@+id/dataTarefa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:ems="10"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            tools:targetApi="o" android:hint="Data da Tarefa"
            tools:layout_editor_absoluteY="400dp"/>
    <Button
            android:id="@+id/btnSalvarTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/cadastarTarefa"
    />

</LinearLayout>